GET http://localhost:9200/synsets/_search
Content-Type: application/json

{
  "query": {
    "term" : { "ofs" : 3141756 } 
  }
}

# query lemma
POST http://localhost:9200/synsets/_search
Content-Type: application/json

{
    "query": {
        "term": {
            "terms": "rock"
        }
    }
}

# query lemma and pos
GET http://localhost:9200/synsets/_search
Content-Type: application/json

{
    "query": {
        "bool": {
            "filter": [
                {
                    "term": {
                        "terms": "rock"
                    }
                },
                {
                    "term": {
                        "pos": "n"
                    }
                }
            ]
        }
    }
}

# lemma -> sents
GET http://localhost:9200/docs/_search
Content-Type: application/json

{
    "query": {
        "nested": {
            "query": {
                "term": {
                    "token.lemmas": "be%2"
                }
            },
            "path": "token"
        }
    }
}

# prefix lemma -> sents
GET http://localhost:9200/docs/_search
Content-Type: application/json

{
    "query": {
        "nested": {
            "path": "token",
            "query": {
                "prefix": {
                    "token.lemmas": "rock%"
                }
            }
        }
    }
}

# regexp lemma -> sents
GET http://localhost:9200/docs/_search
Content-Type: application/json

{
    "query": {
        "nested": {
            "path": "token",
            "query": {
                "regexp": {
                    "token.lemmas": "rock(%[1-4])?"
                }
            }
        }
    }
}


# synsets stats
GET http://localhost:9200/synsets/_stats
Content-Type: application/json

# docs stats
GET http://localhost:9200/docs/_stats
Content-Type: application/json


