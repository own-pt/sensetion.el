# -*- restclient -*-

## index synsets
PUT http://localhost:9200/synsets
Content-Type: application/json

{
   "mappings": {
     "properties": {
       "lemmas": {
         "type":  "keyword"
       }
     }
   }
 }

# index docs
PUT http://localhost:9200/docs
Content-Type: application/json

{
  "mappings": {
    "properties": {
      "token": {
        "type" : "nested",
        "properties": {
  	  "lemmas" : {"type":  "keyword"}
	}
      }
    }
  }
}

# delete synsets
DELETE http://localhost:9200/synsets/
Content-Type: application/json


# delete docs
DELETE http://localhost:9200/docs/
Content-Type: application/json

